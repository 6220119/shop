{
  "name": "@katt/shop",
  "version": "1.0.0",
  "description": "",
  "author": "KATT",
  "scripts": {
    "precommit": "lint-staged",
    "build:lib": "cd lib && yarn build",
    "build:api": "cd api && yarn build",
    "build:web": "cd web && yarn build",
    "build:e2e": "cd e2e && yarn build",
    "delete:prisma": "cd api && yarn delete:local",
    "setup:prisma": "cd api && yarn deploy:local && yarn seed:local",
    "build": "npm-run-all build:*",
    "start:api": "cd api && yarn start",
    "start:web": "cd web && yarn start -- -p 5000",
    "start:e2e": "cd e2e && yarn start",
    "start:prisma": "cd api && yarn prisma local start",
    "dev:api": "cd api && yarn dev",
    "dev:web": "cd web && yarn dev",
    "dev:e2e": "cd e2e && yarn dev",
    "dev:lib": "cd lib && yarn dev",
    "dev": "yarn build:lib && lerna link && npm-run-all --parallel dev:*",
    "deploy:lib": "lerna publish",
    "deploy:api": "cd api && yarn deploy:dev",
    "deploy:web": "cd web && yarn deploy",
    "deploy": "npm-run-all deploy:*",
    "alias:api": "cd api && yarn alias",
    "alias:web": "cd web && yarn alias",
    "alias": "npm-run-all alias:*",
    "test:api": "cd api && yarn test",
    "test:e2e": "yarn start:e2e",
    "test": "npm-run-all --parallel test:*",
    "selenium": "selenium-server -port 4444"
  },
  "private": true,
  "lint-staged": {
    "*.{ts,tsx}!**/generated/*.ts": [
      "prettier --parser typescript --write",
      "tslint --fix",
      "git add"
    ]
  },
  "workspaces": ["api", "e2e", "web", "lib"],
  "devDependencies": {
    "husky": "^0.14.3",
    "lerna": "^2.9.0",
    "lint-staged": "^6.1.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2",
    "wait-port": "^0.2.2"
  }
}
